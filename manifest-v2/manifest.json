{
    "name": "Simple Suspender",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Suspend / unsuspend a tab, with minimal privacy concerns by design",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Suspend"
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "activeTab"
    ]
}